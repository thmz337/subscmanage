<h2><%= t('devise.registrations.edit.title', resource: t('activerecord.models.user')) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.update') %>
  </div>
<% end %>

<%= link_to "パスワードの変更はこちらから", edit_account_password_path %><br>

<%= link_to "退会はこちらから", account_cancel_path %><br>

<%= link_to t('devise.shared.links.back'), :back %>
