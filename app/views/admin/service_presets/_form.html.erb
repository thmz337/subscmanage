<%= form_with(model: admin_service_preset) do |form| %>
  <% if admin_service_preset.errors.any? %>
    <div class="<%= flash_css_class(:alert) %>">
      <h2><%= pluralize(admin_service_preset.errors.count, "error") %> prohibited this admin_service_preset from being saved:</h2>

      <ul>
        <% admin_service_preset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :payment_interval, style: "display: block" %>
    <%= form.number_field :payment_interval, min: 1 %>
  </div>

  <div>
    <%= form.label :payment_unit, style: "display: block" %>
    <%= form.select :payment_unit, [["月", "month"], ["年", "year"]] %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :monetary_unit, style: "display: block" %>
    <%= form.select :monetary_unit, [["円", "JPY"], ["$", "USD"]] %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
