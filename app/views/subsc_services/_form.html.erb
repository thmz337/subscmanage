<%= form_with(model: subsc_service) do |form| %>
  <% if subsc_service.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(subsc_service.errors.count, "error") %> prohibited this subsc_service from being saved:</h2>

      <ul>
        <% subsc_service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :next_payment, style: "display: block" %>
    <%= form.date_field :next_payment %>
  </div>

  <div>
    <%= form.label :payment_interval, style: "display: block" %>
    <%= form.number_field :payment_interval, min: 1 %>
  </div>

  <div>
    <%= form.label :payment_unit, style: "display: block" %>
    <%= form.select :payment_unit, [['月', 'month'], ['年', 'year']] %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
